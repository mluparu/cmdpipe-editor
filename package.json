{
  "name": "cmd-pipe",
  "displayName": "Command/Task Pipe",
  "description": "Run shell tasks defined in tasks.json and pipe their outputs directly into the editor at cursor position",
  "version": "0.1.0",
  "publisher": "Marian Luparu",
  "repository": {
    "type": "git",
    "url": "https://github.com/mluparu/cmdpipe-editor.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "shell",
    "tasks",
    "command",
    "automation",
    "productivity",
    "pipe",
    "task runner",
    "cmdpipe",
    "editor"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cmdpipe.config.showLogs",
        "title": "Show Logs",
        "category": "CmdPipe Config"
      },
      {
        "command": "cmdpipe.quickCommand",
        "title": "Quick Command",
        "category": "CmdPipe"
      },
      {
        "command": "cmdpipe.executeSelection",
        "title": "Execute Selection as Command",
        "category": "CmdPipe"
      },
      {
        "command": "cmdpipe.insertDateTime",
        "title": "Insert Date/Time",
        "category": "CmdPipe"
      },
      {
        "command": "cmdpipe.runTask",
        "title": "Run Task",
        "category": "CmdPipe",
        "icon": "$(list-selection)"
      },
      {
        "command": "cmdpipe.config.refreshTasks",
        "title": "Refresh Tasks",
        "category": "CmdPipe Config",
        "icon": "$(refresh)"
      },
      {
        "command": "cmdpipe.config.createWorkspaceTasks",
        "title": "Create Workspace Tasks",
        "category": "CmdPipe Config",
        "icon": "$(new-file)"
      },
      {
        "command": "cmdpipe.config.openUserConfig",
        "title": "Open User Configuration",
        "category": "CmdPipe Config",
        "icon": "$(folder-opened)"
      },
      {
        "command": "cmdpipe.config.showTaskErrors",
        "title": "Show Task Errors",
        "category": "CmdPipe Config",
        "icon": "$(error)"
      },
      {
        "command": "cmdpipe.config.validateTaskConfigs",
        "title": "Validate Task Configurations",
        "category": "CmdPipe Config",
        "icon": "$(check)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "cmdpipe.config.showLogs",
          "when": "true"
        },
        {
          "command": "cmdpipe.quickCommand",
          "when": "true"
        },
        {
          "command": "cmdpipe.executeSelection",
          "when": "true"
        },
        {
          "command": "cmdpipe.insertDateTime",
          "when": "true"
        },
        {
          "command": "cmdpipe.runTask",
          "when": "true"
        },
        {
          "command": "cmdpipe.config.refreshTasks",
          "when": "true"
        },
        {
          "command": "cmdpipe.config.createWorkspaceTasks",
          "when": "true"
        },
        {
          "command": "cmdpipe.config.openUserConfig",
          "when": "true"
        },
        {
          "command": "cmdpipe.config.showTaskErrors",
          "when": "true"
        },
        {
          "command": "cmdpipe.config.validateTaskConfigs",
          "when": "true"
        }
      ],
      "editor/context": [
        {
          "command": "cmdpipe.quickCommand",
          "when": "editorTextFocus",
          "group": "cmdpipe@1"
        },
        {
          "command": "cmdpipe.executeSelection",
          "when": "editorHasSelection",
          "group": "cmdpipe@2"
        },
        {
          "command": "cmdpipe.insertDateTime",
          "when": "editorTextFocus",
          "group": "cmdpipe@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cmdpipe.runTask",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "true"
      }
    ],
    "configuration": {
      "title": "CmdPipe Configuration",
      "properties": {
        "cmdpipe.configFile": {
          "type": "string",
          "default": ".vscode/shell-tasks.json",
          "description": "Path to the shell tasks configuration file relative to workspace root",
          "scope": "resource"
        },
        "cmdpipe.timeout": {
          "type": "number",
          "default": 30000,
          "minimum": 1000,
          "maximum": 300000,
          "description": "Default timeout for shell command execution in milliseconds",
          "scope": "resource"
        },
        "cmdpipe.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Logging level for the extension",
          "scope": "window"
        },
        "cmdpipe.insertionMode": {
          "type": "string",
          "enum": [
            "replace-selection",
            "insert-at-cursor",
            "append-line"
          ],
          "default": "replace-selection",
          "description": "How to handle output insertion in the editor",
          "scope": "resource"
        },
        "cmdpipe.executeSelectionInsertionMode": {
          "type": "string",
          "enum": [
            "replace-selection",
            "insert-at-cursor",
            "append-line",
            "prompt"
          ],
          "default": "prompt",
          "description": "How to handle output insertion when a shell command is executed based on the current selection in the editor",
          "scope": "resource"
        },
        "cmdpipe.trimOutput": {
          "type": "boolean",
          "default": true,
          "description": "Whether to trim whitespace from command output before insertion",
          "scope": "resource"
        },
        "cmdpipe.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show notifications for task execution results",
          "scope": "window"
        },
        "cmdpipe.maxOutputLength": {
          "type": "number",
          "default": 65536,
          "minimum": 100,
          "maximum": 1048576,
          "description": "Maximum length of command output to capture and insert",
          "scope": "resource"
        },
        "cmdpipe.autoReloadConfig": {
          "type": "boolean",
          "default": true,
          "description": "Whether to automatically reload configuration when the config file changes",
          "scope": "resource"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "**/shell-tasks.json",
        "url": "./src/config/schema.json"
      },
      {
        "fileMatch": "**/.vscode/shell-tasks.json",
        "url": "./src/config/schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chokidar": "^3.5.3",
    "uuid": "^13.0.0"
  }
}
